# Environment Configuration for Local Development
# Copy this file to .env.local and modify the values as needed

# Environment Type
NODE_ENV=development
REACT_APP_ENV=local

# API Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_API_PORT=3001
REACT_APP_API_TIMEOUT=30000

# Web Application Configuration  
REACT_APP_WEB_URL=http://localhost:3000
REACT_APP_WEB_PORT=3000

# WebSocket Configuration
REACT_APP_WS_URL=ws://localhost:3000

# Database Configuration (for backend)
DATABASE_URL=postgresql://user:password@localhost:5432/orokiipay_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=orokiipay_dev
POSTGRES_USER=user
POSTGRES_PASSWORD=password

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-session-secret-key

# Development Tools
ENABLE_DEVTOOLS=true
ENABLE_LOGGER=true

# Test Configuration
TEST_API_URL=http://localhost:3001/api
TEST_WEB_URL=http://localhost:3000

# Optional: Cloud Provider Detection Override
# CLOUD_PROVIDER=local

# NIBSS API Configuration (for backend)
NIBSS_BASE_URL=https://apitest.nibss-plc.com.ng
NIBSS_API_KEY=
NIBSS_CLIENT_ID=
NIBSS_CLIENT_SECRET=
NIBSS_RESET_URL=https://apitest.nibss-plc.com.ng/v2/reset
NIBSS_ENVIRONMENT=sandbox
NIBSS_TIMEOUT=30000

# Local Testing Options
# Use mock service for local development (fastest)
NIBSS_USE_MOCK=true

# SSH Tunnel testing (requires tunnel to be running)
# NIBSS_BASE_URL=https://localhost:8443
# NODE_TLS_REJECT_UNAUTHORIZED=0