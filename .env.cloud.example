# Environment Configuration for Cloud Deployment
# Copy this file to .env and modify the values for cloud deployment

# Environment Type
NODE_ENV=production
REACT_APP_ENV=development

# API Configuration (Use relative URLs for same-domain deployment)
REACT_APP_API_URL=
REACT_APP_API_PORT=3001
REACT_APP_API_TIMEOUT=30000

# Web Application Configuration
REACT_APP_WEB_URL=
REACT_APP_WEB_PORT=3000

# WebSocket Configuration  
REACT_APP_WS_URL=

# Database Configuration (Cloud Database)
DATABASE_URL=postgresql://user:password@cloud-host:5432/orokiipay_prod
POSTGRES_HOST=cloud-database-host
POSTGRES_PORT=5432
POSTGRES_DB=orokiipay_prod
POSTGRES_USER=cloud_user
POSTGRES_PASSWORD=secure_cloud_password

# Security Configuration
JWT_SECRET=super-secure-production-jwt-secret
JWT_EXPIRES_IN=24h
SESSION_SECRET=super-secure-production-session-secret

# Development Tools (Disabled in production)
ENABLE_DEVTOOLS=false
ENABLE_LOGGER=false

# Test Configuration (Use relative URLs)
TEST_API_URL=/api
TEST_WEB_URL=

# Cloud Provider Detection
CLOUD_PROVIDER=gcp
# Or set one of: aws, azure, heroku, vercel, netlify

# GCP Specific (if using Google Cloud Platform)
GOOGLE_CLOUD_PROJECT=your-project-id

# Optional: Force cloud detection
# IS_CLOUD_DEPLOYMENT=true