# Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_USER=bisiadedokun
DB_PASSWORD=
DB_NAME=bank_app_platform

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-at-least-256-bits
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-in-production

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://fmfb.orokii.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# SSL Configuration (Production)
DB_SSL_CA=
DB_SSL_CERT=
DB_SSL_KEY=

# AI Configuration
OPENAI_API_KEY=
